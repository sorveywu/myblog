<% include header %>
<div class="g-wrap">
	<div class="u-page-header">
		编辑分类
	</div>
	<div class="m-form-box f-wg">
		<form class="form" role="form" method="post" action="/admin/cate-update">
			<input type="hidden" value="<%= doc.id %>" name="cateid" />
			<div class="form-group">
			    <label for="name">名称：</label>
			    <input type="text" name="name" class="form-control input-sm" id="name" value="<%= doc.name %>">
			    <span class="help-block">这将是它在站点上显示的名字。</span>
			</div>
			<div class="u-block"></div>
			<div class="form-group">
			    <label for="cname">别名：</label>
			    <input type="text" name="cname" class="form-control input-sm" id="cname" value="<%= doc.cname %>">
			    <span class="help-block">“别名”是在URL中使用的别称，它可以令URL更美观。通常使用小写，只能包含字母，数字和连字符（-）。</span>
			</div>
			<div class="u-block"></div>
			<div class="form-group">
			    <label for="exampleInputPassword1">父级：</label>
			    <select name="parent" class="form-control input-sm">
			    	<option value="0">无</option>
				    <% result.forEach(function(vo){ %>
			    		<option value="<%= vo.id + '_' + vo.name %>" <% if(vo.id == doc.parent.pid){ %>selected<% } %>><%= vo.name %></option>
				    <% }) %>
			    </select>
			</div>
			<div class="u-block"></div>
			<div class="form-group">
			    <label for="description">描述：</label>
			    <textarea name="description" id="description" class="form-control f-fs1" rows="4"><%= doc.description %></textarea>
			</div>
			<div class="u-block"></div>
			<div class="form-group">
			    <labels>是否可用：</label>
			    <label class="radio-inline">
				  	<input type="radio" name="status" id="status" value="1" <% if(doc.status == 1){ %>checked<% } %>>　是
				</label>
				<label class="radio-inline">
					<input type="radio" name="status" id="status" value="0" <% if(doc.status == 0){ %>checked<% } %>>　否
				</label>
			</div>
			<div class="u-block"></div>
			<div class="form-group f-tar">
				<button class="btn btn-primary btn-sm">提交</button>
					　　
				<button　type="button" class="btn btn-danger btn-sm btn-back">取消</button>
			</div>
		</form>
	</div>
</div>
<script>
	$(document).ready(function(){
	  	$('input').iCheck({
	    	checkboxClass: 'icheckbox_minimal-blue',
	    	radioClass: 'iradio_minimal-blue',
	   		increaseArea: '20%'
	  	});
	});
</script>
<% include footer %>