<% include header %>
<div class="g-wrap">
	<div class="u-page-header">
		所有文章
	</div>
	<div class="m-table">
		<table class="table table-bordered table-striped table-hover">
			<thead>
				<tr>
					<th style="width: 30px;"><input type="checkbox" /></th>
					<th>标题</th>
					<th>作者</th>
					<th>分类</th>
					<th>评论</th>
					<th>发布时间</th>
					<th>操作</th>
				</tr>
			</thead>
			<tbody>
				<% docs.forEach(function(doc){ %>
				<tr>
					<td><input type="checkbox" /></td>
					<td><a href="/post/<%= doc.id %>" target="_blank"><%= doc.title %></td>
					<td><%= doc.author %></td>
					<td><%= doc.category.name %></td>
					<td><%= doc.comments.length %></td>
					<td><%= doc.createAt %></td>
					<td>
						<a href="/admin/post-edit?id=<%= doc.id %>">编辑</a> /
						<a href="/admin/post-delete?id=<%= doc.id %>">删除</a>
					</td>
				</tr>
				<% }) %>
			</tbody>
		</table>
	</div>
	<script>
		$(document).ready(function(){
		  	$('input').iCheck({
		    	checkboxClass: 'icheckbox_minimal-blue',
		    	radioClass: 'iradio_minimal-blue',
		   		ncreaseArea: '20%'
		  	});
		});
	</script>
</div>
<% include footer %>