<% include header %>
<div class="g-wrap">
	<div class="u-page-header">
		所有文章
	</div>
	<div class="m-table">
		<table class="table table-bordered table-striped table-hover">
			<thead>			
				<tr>
					<th style="width: 30px;"><input type="checkbox" /></th>
					<th>标题</th>
					<th>作者</th>
					<th>分类</th>
					<th>评论</th>
					<th>发布时间</th>
					<th>操作</th>
				</tr>
			</thead>
			<tbody>
				<% docs.forEach(function(doc){ %>
				<tr>
					<td><input type="checkbox" /></td>
					<td><a href="/admin/post-edit/<%= doc.id %>"><%= doc.title %></td>
					<td><%= doc.author %></td>
					<td><%= doc.category %></td>
					<td><%= doc.comments.length %></td>
					<td><%= doc.createAt %></td>
					<td>
						<a href="#">编辑</a> / 
						<a href="#">删除</a> / 
						<a href="#">禁用</a>
					</td>
				</tr>
				<% }) %>
			</tbody>
		</table>
	</div>

</div>
<% include footer %>